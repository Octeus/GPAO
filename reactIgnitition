const path = require('path'),
    fs = require('fs');

let file = path.join(__dirname, 'public/isElectronOn'),
    here = path.resolve(__dirname),
    json = {
        "path": here,
        "stt": "offline",
        "name": "Octeus DataCommander"
    };

fs.writeFileSync(file, JSON.stringify(json, null, 2));

